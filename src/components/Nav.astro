---
import { Icon } from 'astro-icon/components';

export interface Page {
  name: string;
  url: string;
  icon: string;
}

const links: Page[] = [
  {
    name: 'About',
    url: '#about',
    icon: 'user-20-solid',
  },
  {
    name: 'Projects',
    url: '#projects',
    icon: 'cube-transparent-20-solid',
  },
  {
    name: 'Skills',
    url: '#skills',
    icon: 'puzzle-piece-20-solid',
  },
  {
    name: 'Badges',
    url: '#badges',
    icon: 'flag-20-solid',
  },
  {
    name: 'Contact',
    url: 'mailto:jhdcrux@outlook.com',
    icon: 'envelope-20-solid',
  },
];
---

<nav
  class="flex mb-3 mx-4 border shadow-lg rounded-xl bg-white dark:bg-matte min-h-[76px] fixed bottom-0 left-0 right-0 md:top-0 md:bottom-auto md:hidden overflow-hidden"
>
  {
    links.map((link: Page) => (
      <a
        class="grow py-2 text-center align-middle text-sm text-gray-600 hover:bg-gray-200"
        href={link.url}
        aria-label={`Navigate to ${link.name}`}
      >
        <Icon
          name={`heroicons:${link.icon}`}
          class="mx-auto my-2"
          width={20}
          height={20}
        />
        <span>{link.name}</span>
      </a>
    ))
  }
</nav>
