---
import { SEO } from 'astro-seo';
import Nav from '@/components/Nav.astro';
import "@fontsource/lato"
---

<html lang="en" class="bg-light dark:bg-dark smooth-scroll">
  <head>
    <meta charset="UTF-8" />
    <SEO
      title="Joshua Hero Dela Cruz | @jhdcruz"
      description="A software developer who loves to build software, obviously."
      extend={{
        link: [{ rel: 'icon', href: '/favicon.ico' }],
        meta: [
          {
            name: 'viewport',
            content: 'width=device-width',
          },
          {
            httpEquiv: 'X-UA-Compatible',
            content: 'IE=edge',
          },
        ],
      }}
    />
  </head>

  <body>
    <style is:global>
      @tailwind base;
      @tailwind components;
      @tailwind utilities;

      html {
        font-family: "Lato", sans-serif;
      }
    </style>

    <Nav />

    <main class="text-matte dark:text-light">
      <slot />
    </main>

    <script src="https://code.iconify.design/2/2.2.1/iconify.min.js" async
    ></script>
  </body>
</html>
