---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Link from '@/components/Link.astro';
---

<BaseLayout>
  <section class="px-8 pt-10 pb-20" id="about" aria-label="About section">
    <h2 class="mb-4 text-2xl">Hello there, I'm Joshua Hero,</h2>

    <hr class="my-3" />

    <h1 class="mb-5 text-5xl font-black leading-normal">
      Creating <span class="text-primary drop-shadow-inner"
        >highly-performant</span
      >
      websites and web apps.
    </h1>

    <div class="flex flex-col md:flex-row">
      <Link href="#projects">
        <span class="font-semibold text-white">See my projects</span>
      </Link>

      <Link href="#projects" outline>
        <span class="font-semibold text-primary">More about me</span>
      </Link>
    </div>
  </section>
</BaseLayout>
